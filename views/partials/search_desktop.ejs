<style>
    .vertical-line {
        border-left: 1px solid #000;
        height: 3rem;
        margin: 0 10px;
    }
    .custom-btn {
        background-color: #EAFE87;
        border-color: #EAFE87;
        color: #000;
    }
    @media (max-width: 768px) {
        .btn.custom-btn {
            display: none;
        }
        .vertical-line{
            display: none;
        }
    }
</style>

<div class="row">
    <form action="">
        <div class="px-3 bg-gray_light rounded rounded-pill shadow-sm mb-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <button id="button-addon2" type="submit" class="btn btn-link text-black"><i class="fa fa-search"></i></button>
                </div>
                <input type="search" placeholder="Search Topic" aria-describedby="button-addon2" class="form-control border-0 bg-gray_light mx-2 my-1">
                <div class="vertical-line"></div>
                <a href="/projects" class="btn custom-btn mx-4 my-1 rounded-4 text-black">Projects</a>
                <a href="/people" class="btn custom-btn mx-4 my-1 rounded-4 text-black">People</a>
                <a href="/communities" class="btn custom-btn mx-4 my-1 rounded-4 text-black">Communities</a>
            </div>
        </div>
    </form>
</div>

<script>
    const customButtons = document.querySelectorAll(".custom-btn");
    customButtons.forEach(button => {
        button.addEventListener("click", function() {
            customButtons.forEach(btn => btn.classList.remove("btn-outline-highlighted"));
            this.classList.add("btn-outline-highlighted");
        });
    });
</script>
