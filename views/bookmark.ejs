function createCard(cardData) {
    const cardContainer = document.getElementById("card-container");

    // Create card element
    const card = document.createElement("div");
    card.classList.add("card", "rounded-4", "card-hover");

    // Create card image
    const cardImg = document.createElement("img");
    cardImg.classList.add("card-img-top", "rounded-top-4");
    cardImg.src = cardData.imgSrc;
    cardImg.alt = "Card image cap";

    // Create card body
    const cardBody = document.createElement("div");
    cardBody.classList.add("card-body");

    // Create card maker paragraph
    const cardMaker = createParagraph("card-text", cardData.maker);

    // Create card title
    const cardTitle = createHeading("h5", "card-title", cardData.title);

    // Create card text
    const cardText = createParagraph("card-text", cardData.text);

    // Create and add the button to the card body with the category label
    const buttonContainer = createButtonContainer(cardData.categoryLabel);

    // Append elements to card body
    cardBody.appendChild(cardMaker);
    cardBody.appendChild(cardTitle);
    cardBody.appendChild(cardText);
    cardBody.appendChild(buttonContainer);

    // Append elements to the card
    card.appendChild(cardImg);
    card.appendChild(cardBody);

    // Append the card to the card container
    cardContainer.appendChild(card);
}

function createParagraph(className, text) {
    const paragraph = document.createElement("p");
    paragraph.classList.add(className);
    paragraph.textContent = text;
    return paragraph;   
}

function createHeading(headingType, className, text) {
    const heading = document.createElement(headingType);
    heading.classList.add(className);
    heading.textContent = text;
    return heading;
}

function createButtonContainer(categoryLabel) {
    const buttonContainer = document.createElement("div");
    buttonContainer.classList.add("btn-container");
    const categoryLabelClass = categoryLabel.replace(/\s+/g, '_').toLowerCase();

    if (categoryLabel === "UI/UX") {
        buttonContainer.innerHTML = `
            <div class="">
                <button class="btn btn-dark rounded-5 position-relative mt-1">
                    <div class="ps-4">${categoryLabel}</div>
                    <div class="circle_ui_ux"></div>
                </button> 
            </div>
        `;
    } else {
        buttonContainer.innerHTML = `
            <div class="">
                <button class="btn btn-dark rounded-5 position-relative mt-1">
                    <div class="ps-4">${categoryLabel}</div>
                    <div class="circle_${categoryLabelClass}"></div>
                </button> 
